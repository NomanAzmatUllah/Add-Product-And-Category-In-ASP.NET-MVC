@model IEnumerable<addcategory_product.Models.tbl_category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <button type="button" onclick="location.href='@Url.Action("category", " category_products")'">
        Create New
    </button>
</p>
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cat_id)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.cat_name)
        </th>
        <th>
            Edit
        </th>
        <th>
            Details
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cat_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cat_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.cat_id }) |
            </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.cat_id }) 
           </td>
        @*<td>    
         @Html.ActionLink("Delete", "Delete", new { id=item.cat_id })
        </td>*@
    </tr>
}

</table>
